<body>
    <section class="sidebar">

        <ul>
            <!-- Profiel foto -->
            <li><img class="sidebarImg" src="/uploads/<%= theme.images%>" /></li>
            <!-- user naam -->
            <li>
                <h2><%= user.name %> <%= user.surname %></h2>
            </li>
            <!-- button moet gelinkt worden naar eigen profiel -->
            <li><a href="/account" class="profileButton">Mijn profiel</a></li>
            <li><a href="#" class="messageButton">Bericht maken</a></li>
            <li><a href="#" class="settingsButton">Instellingen</a></li>
            <li>
                <h3>Selecteer een thema:</h3>
                <form id="theme-form" method="POST" action="/theme/updateTheme">
                    <select id="theme-selector" name="themeId">
                        <% col_thema.forEach(function(theme){ %>
                        <option value="<%= theme._id %>" id="<%= theme._id %>" name="<%= theme._id %>"><%= theme.name %>
                        </option>
                        <% }); %>
                    </select>
                    <button type="submit">Opslaan</button>
                </form>
            </li>
            <li>
                <p>Versie 1.0</p>
            </li>
        </ul>

    </section>
</body>