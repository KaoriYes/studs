                <div class="message_input_wrapper">
                    <input id="message" class="message_input" placeholder="Type your message here..." required/>
                </div>
                <button class="send_message">
                   Send
                </button>
              </form>
            </div>
        </section>
        
        <footer>
            <%- include('includes/footer'); -%>
        </footer>
    </body>
</html>